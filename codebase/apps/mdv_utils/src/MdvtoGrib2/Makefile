	-ldsserver -ldidss -lrapformats -lgrib2 \
	-leuclid -ltoolsa $(JASPER_LIBS) -lpng \
	-ldataport -ltdrp -lrapmath -lz \
	$(NETCDF4_LIBS) -lbz2 -lz -lm

