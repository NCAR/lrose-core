BuildIncludes($(INCLUDES_SRCS),$(IMAGE_INCDIR),/**/)

install:: $(SRCS)
	$(MKDIRHIER) $(DESTDIR)$(HEADER_DEST)/$(IMAGEINC)
	
InstallMultiple($(SRCS),$(HEADER_DEST)/$(IMAGEINC))

PopulateSCCSTree(h,$(ALLFILES))

clean::

depend::
