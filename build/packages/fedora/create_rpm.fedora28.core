#! /bin/csh

#
# in docker image, create rpm, place it in /tmp
#

cd ~/git/lrose-core/build/packages/fedora

set rpmDir = /tmp/fedora28-core/rpms
/bin/rm -rf $rpmDir
mkdir -p $rpmDir

docker run \
    -v ${rpmDir}:/rpms \
    fedora28:build \
    /root/git/lrose-core/build/packages/fedora/run_rpmbuild.fedora28.core

mkdir -p ~/releases/lrose-core

rsync -av ${rpmDir}/*/*.rpm ~/releases/lrose-core
