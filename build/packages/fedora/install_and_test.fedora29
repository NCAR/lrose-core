#! /bin/csh

#
# in clean docker image,
# install rpm and test that the apps work
#

cd ~/git/lrose-core/build/packages/fedora

# remove any old image

docker rm image fedora29:install

# make rpms available to container

set rpmDir = /tmp/fedora29-blaze/rpms

# install the rpms in a container

docker build \
    -v ${rpmDir}:/rpms \
    --tag fedora29:install \
    --file Dockerfile.fedora29.install_and_test .

