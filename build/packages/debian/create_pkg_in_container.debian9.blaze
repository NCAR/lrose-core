#! /bin/csh

# in docker image, create .deb file, place it in /tmp

cd ~/git/lrose-core/build/packages/debian

set debDir = /tmp/debian9-blaze/debs
/bin/rm -rf $debDir
mkdir -p $debDir

docker run \
    -v ${debDir}:/debs \
    debian9:build \
    /root/git/lrose-core/build/packages/debian/create_debian_pkg debian9 blaze

mkdir -p ~/releases/lrose-blaze

rsync -av ${debDir}/*.deb ~/releases/lrose-blaze
