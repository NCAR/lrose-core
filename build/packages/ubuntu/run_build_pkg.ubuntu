#! /bin/bash

###########################################################
# call script to actually build package
# $1: os_type, e.g. ubuntu
# $2: os_version, e.g. 16.04
# $3: lrose_pkg, e.g. core

os_type=$1
os_version=$2
lrose_pkg=$3

# update git

cd ~/git/lrose-core/
git pull

# go to ubuntu dir

cd build/packages/ubuntu

# run the build script

./build_pkg.ubuntu ${os_type} $os_version $lrose_pkg
