# using -rf for $(CP) to force copy

install_include: mk_inc_dir
	if $(TEST) -d include/$(MODULE_NAME); then \
	$(CP) -rf include/$(MODULE_NAME) $(LROSE_INC_DIR); else \
	$(CP) -rf include/*h $(LROSE_INC_DIR); fi

mk_inc_dir:
	if $(TEST) -d $(LROSE_INC_DIR)/$(MODULE_NAME); then :; else \
		$(MKDIR) $(LROSE_INC_DIR)/$(MODULE_NAME); fi

cppcheck_lib_incs:
	if $(TEST) -d include/$(MODULE_NAME); then \
	   CppRuleCheck $(CPPCHECKFLAGS) include/$(MODULE_NAME)/*.h include/$(MODULE_NAME)/*.hh ; fi

