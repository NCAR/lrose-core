#
# Include the recursive targets for pgf.
#

all: debug

include $(RAP_MAKE_INC_DIR)/rap_make_pgf_recursive_targets

#
# compile target
#

target:
	echo Making FORTRAN program ... ; \
	$(MAKE) MAKEFLAGS="$(MAKEFLAGS)" _CC="$(_CC)" _CPPC="$(_CPPC)" _F90C="$(_F90C)" _PGFC="$(_PGFC)" DBUG_OPT_FLAGS="$(DBUG_OPT_FLAGS)" DEBUG_CFLAGS="$(DEBUG_CFLAGS)" DEBUG_LIBS="$(DEBUG_LIBS)" DEBUG_LDFLAGS="$(DEBUG_LDFLAGS)" SYS_LIBS="$(SYS_LIBS)" SYS_CFLAGS="$(SYS_CFLAGS)" $(TARGET_FILE);

#
# link target
#

$(TARGET_FILE): $(OBJS) Makefile
	echo Linking FORTRAN program ...
	$(RM) $(TARGET_FILE)
	$(_PGFC) $(PGFFLAGS) -o $(TARGET_FILE) $(OBJS) 

#
# Include the bin targets for C, C++ and FORTRAN
#

include $(RAP_MAKE_INC_DIR)/rap_make_cf_bin_targets

#
# miscellaneous targets
#

include $(RAP_MAKE_INC_DIR)/rap_make_misc_targets

clean_all: clean clean_bin clean_insure

#
# Include the suffixes
#

include $(RAP_MAKE_INC_DIR)/rap_make_pgf_suffixes

