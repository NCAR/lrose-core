#! /bin/csh

#
# in docker image, create .deb file, place it in /tmp
#

cd ~/git/lrose-core/build/packaging/debian

set debDir = /tmp/debian9-blaze/debs
/bin/rm -rf $debDir
mkdir -p $debDir

docker run \
    -v ${debDir}:/debs \
    debian9:build \
    /root/git/lrose-core/build/packaging/ubuntu/run_deb_build.debian9.blaze

mkdir -p ~/releases/lrose-blaze

rsync -av ${debDir}/*/*.deb ~/releases/lrose-blaze
