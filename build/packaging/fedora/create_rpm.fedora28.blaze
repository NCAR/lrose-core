#! /bin/csh

#
# in docker image, create rpm, place it in /tmp/rpms
#

cd ~/git/lrose-core/build/packaging/fedora

set rpmDir = /tmp/fedora28-blaze/rpms
/bin/rm -rf $rpmDir
mkdir -p $rpmDir

docker run \
    -v ${rpmDir}:/rpms \
    fedora28:build \
    /root/git/lrose-core/build/packaging/fedora/run_rpmbuild.fedora28.blaze

mkdir -p ~/releases/lrose-blaze

rsync -av ${rpmDir}/*/*.rpm ~/releases/lrose-blaze
