#! /bin/csh

#
# in clean docker image,
# install rpm and test that the apps work
#

cd ~/git/lrose-core/build/packaging/fedora

# remove any old image

docker rm image fedora28:installed

# make rpms available to container

set rpmDir = /tmp/fedora28-blaze/rpms
mkdir -p $rpmDir

# install the rpms in a container

docker build \
    -v ${rpmDir}:/rpms \
    --tag fedora28:installed \
    --file Dockerfile.fedora28.install_and_test .

