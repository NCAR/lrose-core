#! /bin/csh

#
# in docker image, create rpm, place it in /tmp/rpms
#

cd ~/git/lrose-core/build/packaging/fedora

set rpmDir = /tmp/fedora29-blaze/rpms
mkdir -p $rpmDir

docker run \
    -v ${rpmDir}:/rpms \
    fedora29:blaze \
    /root/git/lrose-core/build/packaging/fedora/run_rpmbuild.fedora29.blaze

mkdir -p ~/releases/lrose-blaze

rsync -av ${rpmDir}/*/*.rpm ~/releases/lrose-blaze
