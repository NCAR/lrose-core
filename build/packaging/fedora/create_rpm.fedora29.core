#! /bin/csh

#
# in docker image, create rpm, place it in /tmp/rpms
#

cd ~/git/lrose-core/build/packaging/fedora

set rpmDir = /tmp/fedora29-core/rpms
/bin/rm -rf $rpmDir
mkdir -p $rpmDir

docker run \
    -v ${rpmDir}:/rpms \
    fedora29:build \
    /root/git/lrose-core/build/packaging/fedora/run_rpmbuild.fedora29.core

mkdir -p ~/releases/lrose-core

rsync -av ${rpmDir}/*/*.rpm ~/releases/lrose-core
