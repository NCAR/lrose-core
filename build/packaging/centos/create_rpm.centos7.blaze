#! /bin/csh

#
# in docker image, create rpm, place it in /tmp/rpms
#

cd ~/git/lrose-core/build/packaging/centos

set rpmDir = /tmp/centos7-blaze/rpms
/bin/rm -rf $rpmDir
mkdir -p $rpmDir

docker run \
    -v ${rpmDir}:/rpms \
    centos7:blaze \
    /root/git/lrose-core/build/packaging/centos/run_rpmbuild.centos7.blaze

mkdir -p ~/releases/lrose-blaze

rsync -av ${rpmDir}/*/*.rpm ~/releases/lrose-blaze
