#! /bin/csh

#
# in docker image, create rpm, place it in /tmp/rpms
#

cd ~/git/lrose-core/build/packaging/centos

set rpmDir = /tmp/centos6-blaze/rpms
mkdir -p $rpmDir

docker run \
    -v ${rpmDir}:/rpms \
    centos6:blaze \
    /root/git/lrose-core/build/packaging/centos/run_rpmbuild.centos.blaze

mkdir -p ~/releases/lrose-blaze

rsync -av ${rpmDir}/*/*.rpm ~/releases/lrose-blaze
