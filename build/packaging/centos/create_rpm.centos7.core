#! /bin/csh

#
# in docker image, create rpm, place it in /tmp
#

cd ~/git/lrose-core/build/packaging/centos

set rpmDir = /tmp/centos7-core/rpms
/bin/rm -rf $rpmDir
mkdir -p $rpmDir

docker run \
    -v ${rpmDir}:/rpms \
    centos7:build \
    /root/git/lrose-core/build/packaging/centos/run_rpmbuild.centos7.core

mkdir -p ~/releases/lrose-core

rsync -av ${rpmDir}/*/*.rpm ~/releases/lrose-core
